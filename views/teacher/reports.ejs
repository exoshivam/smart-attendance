        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: classes,
                datasets: [{
                    label: 'Attendance Rate (%)',
                    data: attendanceRates,
                    backgroundColor: attendanceRates.map(rate => 
                        rate >= 95 ? '#10B981' : 
                        rate >= 90 ? '#3B82F6' : 
                        rate >= 85 ? '#F59E0B' : '#EF4444'
                    ),
                    borderColor: '#ffffff',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
