<%- include('../partials/header', { title: 'Student Profile' }) %>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Student Profile</h1>
            <p class="text-gray-600 mt-2">Detailed information and attendance history</p>
        </div>
        <a href="/teacher/students" class="bg-gray-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-gray-700 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            Back to Students
        </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Student Information Card -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
                <div class="text-center mb-6">
                    <div class="w-24 h-24 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
                        <span class="text-3xl font-bold text-white">
                            <%= student.name.charAt(0).toUpperCase() %>
                        </span>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800"><%= student.name %></h2>
                    <p class="text-gray-600">Class <%= student.class %>-<%= student.section %></p>
                </div>

                <div class="space-y-4">
                    <div class="flex items-center justify-between py-2 border-b border-gray-100">
                        <span class="text-gray-600">Roll Number</span>
                        <span class="font-semibold"><%= student.rollNumber %></span>
                    </div>
                    
                    <div class="flex items-center justify-between py-2 border-b border-gray-100">
                        <span class="text-gray-600">RFID Tag</span>
                        <span class="font-mono text-sm bg-gray-100 px-2 py-1 rounded"><%= student.rfidTagId %></span>
                    </div>
                    
                    <div class="flex items-center justify-between py-2 border-b border-gray-100">
                        <span class="text-gray-600">Overall Attendance</span>
                        <span class="font-semibold text-<%= student.attendancePercentage >= 75 ? 'green' : 'red' %>-600">
                            <%= student.attendancePercentage.toFixed(1) %>%
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between py-2 border-b border-gray-100">
                        <span class="text-gray-600">Dropout Risk</span>
                        <% const riskLevel = student.dropoutRisk > 0.7 ? 'HIGH' : student.dropoutRisk > 0.4 ? 'MEDIUM' : 'LOW'; %>
                        <% const riskColor = riskLevel === 'HIGH' ? 'red' : riskLevel === 'MEDIUM' ? 'yellow' : 'green'; %>
                        <span class="px-2 py-1 text-xs font-medium bg-<%= riskColor %>-100 text-<%= riskColor %>-800 rounded-full">
                            <%= riskLevel %>
                        </span>
                    </div>

                    <% if (student.parentContact) { %>
                    <div class="flex items-center justify-between py-2 border-b border-gray-100">
                        <span class="text-gray-600">Parent Contact</span>
                        <span class="font-semibold"><%= student.parentContact %></span>
                    </div>
                    <% } %>

                    <% if (student.parentEmail) { %>
                    <div class="flex items-center justify-between py-2">
                        <span class="text-gray-600">Parent Email</span>
                        <span class="font-semibold text-sm"><%= student.parentEmail %></span>
                    </div>
                    <% } %>
                </div>

                <!-- Risk Factors -->
                <% if (student.riskFactors && student.riskFactors.length > 0) { %>
                <div class="mt-6 p-4 bg-red-50 rounded-lg border border-red-200">
                    <h3 class="font-semibold text-red-800 mb-2">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        Risk Factors
                    </h3>
                    <ul class="text-sm text-red-700 space-y-1">
                        <% student.riskFactors.forEach(factor => { %>
                            <li>â€¢ <%= factor %></li>
                        <% }) %>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Attendance Statistics and History -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Monthly Statistics -->
            <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-6">Monthly Statistics</h3>
                
                <div class="grid grid-cols-3 gap-6 mb-6">
                    <div class="text-center">
                        <div class="text-3xl font-bold text-green-600"><%= monthlyStats.attendance %></div>
                        <div class="text-sm text-gray-600">Days Present</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-red-600"><%= monthlyStats.total - monthlyStats.attendance %></div>
                        <div class="text-sm text-gray-600">Days Absent</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-bold text-blue-600"><%= monthlyStats.percentage %>%</div>
                        <div class="text-sm text-gray-600">Attendance Rate</div>
                    </div>
                </div>

                <!-- Attendance Chart -->
                <div class="h-64">
                    <canvas id="attendanceChart"></canvas>
                </div>
            </div>

            <!-- Recent Attendance History -->
            <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-gray-800">Recent Attendance History</h3>
                    <span class="text-sm text-gray-600">Last 30 days</span>
                </div>

                <div class="space-y-3 max-h-96 overflow-y-auto">
                    <% attendanceHistory.forEach(record => { %>
                        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-<%= record.status === 'present' ? 'green' : record.status === 'late' ? 'yellow' : 'red' %>-100 rounded-full flex items-center justify-center mr-3">
                                    <i class="fas fa-<%= record.status === 'present' ? 'check' : record.status === 'late' ? 'clock' : 'times' %> text-<%= record.status === 'present' ? 'green' : record.status === 'late' ? 'yellow' : 'red' %>-600"></i>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-900">
                                        <%= record.date.toLocaleDateString('en-US', { 
                                            weekday: 'long', 
                                            year: 'numeric', 
                                            month: 'short', 
                                            day: 'numeric' 
                                        }) %>
                                    </p>
                                    <p class="text-sm text-gray-600">
                                        Method: <%= record.method.charAt(0).toUpperCase() + record.method.slice(1) %>
                                    </p>
                                </div>
                            </div>
                            <div class="text-right">
                                <p class="font-semibold text-<%= record.status === 'present' ? 'green' : record.status === 'late' ? 'yellow' : 'red' %>-600">
                                    <%= record.status.charAt(0).toUpperCase() + record.status.slice(1) %>
                                </p>
                                <% if (record.timeIn) { %>
                                    <p class="text-sm text-gray-500">
                                        <%= record.timeIn.toLocaleTimeString('en-US', { 
                                            hour: '2-digit', 
                                            minute: '2-digit' 
                                        }) %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>

                    <% if (attendanceHistory.length === 0) { %>
                        <div class="text-center py-8 text-gray-500">
                            <i class="fas fa-calendar-times text-4xl mb-4"></i>
                            <p>No attendance records found</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Create attendance trend chart
    const ctx = document.getElementById('attendanceChart').getContext('2d');
    
    // Generate last 30 days data
    const last30Days = [];
    const attendanceData = [];
    
    for (let i = 29; i >= 0; i--) {
        const date = new Date();
        date.setDate(date.getDate() - i);
        last30Days.push(date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }));
        
        // Simulate attendance data (in real app, this would come from server)
        const isPresent = Math.random() > 0.2; // 80% attendance simulation
        attendanceData.push(isPresent ? 1 : 0);
    }
    
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: last30Days,
            datasets: [{
                label: 'Attendance',
                data: attendanceData,
                borderColor: '#3B82F6',
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                borderWidth: 2,
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    max: 1,
                    ticks: {
                        callback: function(value) {
                            return value === 1 ? 'Present' : 'Absent';
                        }
                    }
                },
                x: {
                    ticks: {
                        maxTicksLimit: 10
                    }
                }
            }
        }
    });
</script>

<%- include('../partials/footer') %>